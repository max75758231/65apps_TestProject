<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin_normal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_employee_details"
                android:layout_width="@dimen/image_square_side_150"
                android:layout_height="@dimen/image_square_side_150"
                android:src="@drawable/no_avatar_placeholder"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/spacing_tiny_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_employee_details_name_pattern"
                    android:text="@string/name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_tiny_16"
                    android:layout_marginBottom="@dimen/spacing_tiny_16"/>

                <TextView
                    android:id="@+id/tv_employee_details_name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_employee_details_surname_pattern"
                    android:text="@string/surname"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_tiny_16"
                    android:layout_marginBottom="@dimen/spacing_tiny_16"/>

                <TextView
                    android:id="@+id/tv_employee_details_surname"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_tiny_16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_employee_details_birthday_pattern"
                    android:text="@string/birthday"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_tiny_16"
                    android:layout_marginBottom="@dimen/spacing_tiny_16"/>

                <TextView
                    android:id="@+id/tv_employee_details_birthday"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_employee_details_age_pattern"
                    android:text="@string/age"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_tiny_16"
                    android:layout_marginBottom="@dimen/spacing_tiny_16"/>

                <TextView
                    android:id="@+id/tv_employee_details_age"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_employee_details_specialty_pattern"
                    android:text="@string/specialty"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/spacing_tiny_16"/>

                <TextView
                    android:id="@+id/tv_employee_details_specialty"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/font_large_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>